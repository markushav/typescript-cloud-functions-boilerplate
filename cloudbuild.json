{
  "steps": [
    {
      "name": "gcr.io/cloud-builders/npm",
      "args": [
        "install"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/npm",
      "args": [
        "run",
        "build"
      ],
      "id": "build"
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "waitFor": [
        "build"
      ],
      "args": [
        "functions",
        "deploy",
        "exampleCloudFunction",
        "--source",
        "functions",
        "--timeout",
        "540s",
        "--region",
        "europe-west1",
        "--trigger-http",
        "--allow-unauthenticated",
        "--runtime",
        "nodejs16",
        "--memory",
        "1024MB"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gcloud",
      "waitFor": [
        "build"
      ],
      "args": [
        "functions",
        "deploy",
        "anotherExampleCloudFunction",
        "--source",
        "functions",
        "--timeout",
        "540s",
        "--region",
        "europe-west1",
        "--trigger-http",
        "--allow-unauthenticated",
        "--runtime",
        "nodejs16",
        "--memory",
        "1024MB"
      ]
    }
  ]
}